<!-- create new owner form -->

<form method="post" action="/owners" class="form-container">

  <div class="field-group">
    <label for="name-field">First name:</label>
    <div class="field">
      <input
      type="text"
      name="name"
      id="name-field"
      />
    </div>
  </div>

  <div class="field-group">
    <label for="surname-field">last name:</label>
    <div class="field">
      <input
      type="text"
      name="last_name"
      id="surname-field"
      />
    </div>
  </div>


  <div class="field-group">
    <label for="address-field">Address:</label>
    <div class="field">
      <input
      type="text"
      name="address"
      id="address-field"
      />
    </div>
  </div>

  <button class="submit-button">Create owner record</button>
</form>
