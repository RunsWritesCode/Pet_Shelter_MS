<!-- one animal -->
  <div class="animal-profile">
    <p>Name: <%= @animal.name() %></p>
    <p>Admitted: <%= @animal.admission %></p>
    <p><a class="action link" href="/animals/<%= @animal.id %>/edit">Update record</a></p>
  </div>

  <form method="post" action="/animals/<%= @animal.id %>">
    <input type="hidden" name="_method" value="delete">
    <button class="big-button button">Delete profile</button>
  </form>
